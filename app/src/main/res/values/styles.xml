<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary3</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color of the window (activity or dialog) in which our view resides. -->
        <item name="android:windowBackground">@color/keeperWindowBackground</item>

        <!--Disable animation while switching between activities -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
